        </li>
        <li class="active">
          <%= link_to "Law", law_path %>
        </li>
        <li>
          <%= link_to "Business", business_path %>
        </li>
        <li>
          <%= link_to "Lifestyle", lifestyle_path %>
        </li>
        <li>
          <%= link_to "Faith", faith_path %>
        </li>
      </ul>
      <%= render 'shared/feed' %>
