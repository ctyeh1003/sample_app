<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <% if current_user?(@user) %>
      <%= render 'shared/micropost_form' %>
    <% end %> 
  </aside>
   <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Opinions by <%= @user.name %> (<%= @user.microposts.count %>)</h3>
      <%= render 'shared/feed' %>
    <% end %>
  </div>
</div>
