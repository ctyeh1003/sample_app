<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      
      <section>
        <%= render 'shared/stats' %>
      </section>

      <section>
        <%= render 'shared/micropost_form' %>
      </section>

    </aside>
  <% else %>
  <div class="row">
    <aside class="span4">
      <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
    </aside>
  <% end %>

 